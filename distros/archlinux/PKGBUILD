pkgname=flow-pomodoro
pkgver=0.9.4
pkgrel=1
pkgdesc="A sticky task manager and pomodoro that blocks distractions."
arch=('i686' 'x86_64')
url="https://github.com/iamsergio/flow-pomodoro"
license=('GPL')
depends=('qt5-base>=5.3.0', 'qt5-declarative>=5.3.0', 'qt5-graphicaleffects>=5.3.0', 'qt5-quickcontrols>=5.3.0')
makedepends=('qt5-base>=5.3.0', 'qt5-declarative>=5.3.0', 'qt5-graphicaleffects>=5.3.0', 'qt5-quickcontrols>=5.3.0')

source=(https://github.com/iamsergio/flow-pomodoro/archive/v${pkgver}.zip)
sha1sums=('e90a2fe5449a3758552b9560fccb12ba4bf479f5')

build() {
  mkdir -p ${pkgname}-${pkgver}/build
  cd ${pkgname}-${pkgver}/build
  qmake ../flow.pro
  make -j10
}

package() {
  cd ${pkgname}-${pkgver}/build
  make INSTALL_ROOT=$pkgdir/usr/ install
}
